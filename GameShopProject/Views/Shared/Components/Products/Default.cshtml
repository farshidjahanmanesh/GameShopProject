<div class="nk-gap-2"></div>
<h3 class="nk-decorated-h-2" style="direction:rtl"><span><span class="text-main-1">محصولات</span> ما</span></h3>
<div class="nk-gap-1"></div>
<div class="row vertical-gap">

    @foreach (var item in Model)
    {
        <div class="col-lg-6">
            <div class="nk-product-cat-2">
                <a class="nk-product-image" href="store-product.html" style="margin-left:15px;">
                    <img src="/images/@item.Picture" alt="@item.Name" style="width:100%;height:100%">
                </a>
                <div class="nk-product-cont">
                    <h3 class="nk-product-title h5"><a asp-route="productShow"
                                                       asp-route-id="@item.Id"
                                                       asp-route-name="@item.Name">@item.Name</a></h3>
                    <div class="nk-gap-1"></div>
                    <div>
                        @item.Detail
                    </div>
                    <div class="nk-gap-2"></div>
                    <div class="nk-product-price">ريال @item.Price</div>
                    <div class="nk-gap-1"></div>
                    <a href="#" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">افزودن به سبد خرید</a>
                </div>
            </div>
        </div>

    }



</div>